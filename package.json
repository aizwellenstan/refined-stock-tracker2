{
  "name": "refined-itsukara-link",
  "private": true,
  "version": "0.0.1",
  "author": "",
  "license": "AGPL-3.0-or-later",
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "8.12.0",
    "npm": "6.4.1"
  },
  "scripts": {
    "test": "run-s test:*",
    "test:jest": "jest --coverage",
    "test:eslint": "eslint -c .eslintrc.json 'packages/**/*.{ts,tsx}'",
    "test:stylelint": "stylelint 'packages/**/*.{tsx,tsx}'",
    "test:tsc": "tsc -p packages/client && tsc -p packages/server",
    "build": "run-p build:*",
    "build:client": "cd packages/client && npm run build",
    "build:gateway": "cd packages/gateway && npm run build",
    "watch:client": "cd packages/client && npm run watch",
    "watch:server": "ts-node packages/server/main.ts",
    "start": "ts-node packages/server/main.ts",
    "manage:translations": "i18next-scanner 'packages/**/*.{ts,tsx}'"
  },
  "dependencies": {
    "@types/jest": "^24.0.21",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^2.5.0",
    "codecov": "^3.5.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "husky": "^3.0.9",
    "i18next-scanner": "^2.10.3",
    "i18next-scanner-typescript": "^1.0.3",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "stylelint": "^11.1.1",
    "stylelint-config-property-sort-order-smacss": "^5.0.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.6.4",
    "webpack": "*",
    "io-ts": "*",
    "gaxios": "*",
    "fp-ts": "*",
    "@elastic/elasticsearch": "^7.4.0",
    "@graphql-codegen/cli": "^1.8.2",
    "@graphql-codegen/typescript": "^1.8.2",
    "@graphql-codegen/typescript-resolvers": "^1.8.2",
    "@types/cors": "^2.8.6",
    "@types/cron": "^1.7.1",
    "@types/dotenv": "^8.2.0",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.2",
    "@types/graphql-iso-date": "^3.3.3",
    "@types/node": "^12.11.7",
    "@types/pg": "^7.11.2",
    "apollo": "^2.21.0",
    "apollo-link": "^1.2.12",
    "apollo-link-http": "^1.5.15",
    "apollo-server-express": "^2.9.7",
    "cors": "^2.8.5",
    "cron": "^1.7.1",
    "dataloader": "^1.4.0",
    "deepmerge": "^4.2.2",
    "dotenv": "^8.2.0",
    "express": "*",
    "graphql": "^14.5.8",
    "graphql-depth-limit": "^1.1.0",
    "graphql-iso-date": "^3.6.1",
    "i18next": "^19.0.0",
    "i18next-express-middleware": "^1.8.1",
    "pg": "^7.12.1",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^8.3.0",
    "tsconfig-paths": "^3.8.0",
    "type-fest": "^0.8.1",
    "typeorm": "^0.2.20",
    "@types/request": "*",
    "request": "*",
    "path": "*",
    "errorhandler": ">=1.4.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "stylelint",
      "git add"
    ]
  }
}
